{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "demo/appointment-demo/NormalClassForm.jsx", "demo/appointment-demo/EditNormalClassForm.jsx", "demo/batch-entry-demo/NewBatchEntryForm.jsx", "demo/batch-entry-demo/EditBatchEntryForm.jsx", "demo/attendance-demo/AttendanceForm.jsx"],
  "exclude": ["node_modules"]
}
